# Generic settings - personal info in ~/.gitconfig.local
[include]
    path = ~/.gitconfig.local

[core]
    editor = nvim
    excludesfile = ~/.config/git/ignore
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[commit]
    gpgsign = true
[tag]
    gpgSign = true
