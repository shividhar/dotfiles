## Editors
export EDITOR='nano'
export VISUAL='nano'
export PAGER='less'

## Language
export LANG='en_US.UTF-8'

# Aliases
alias vim=nvim
alias gpp="g++ -std=c++11 -o "

alias less='less -rN'
alias mkdir='mkdir -p'

# Darwin
